# Google Cloud Configuration
PROJECT_ID=your-project-id
STORAGE_URI=gs://your-bucket/

# Gemini Configuration
GEMINI_PROJECT_ID=your-project-id
GEMINI_LOCATION=us-central1
GEMINI_MODEL_NAME=gemini-2.5-pro
GEMINI_API_KEY=your-gemini-api-key

# History Tracking
DB_ID="media-gen-db"
HISTORY_ENABLED=true

# Default Prompts
DEFAULT_TEXT_PROMPT=A cinematic tracking shot of a futuristic city with neon lights
DEFAULT_IMAGE_PROMPT=Transform this image into a cinematic video with motion and atmosphere
DEFAULT_NEGATIVE_PROMPT=blurry, low quality, distorted faces, bad lighting
DEFAULT_STYLE_PROMPT=cinematic quality, detailed, photorealistic, vivid colors, dramatic lighting
APPEND_DEFAULT_STYLE=true
DEFAULT_GEMINI_INSTRUCTIONS=You are an AI assistant specializing in creating descriptive prompts for text-to-video generation systems. Look at this image and create a detailed prompt that could be used to generate a video based on it.

# Video Generation Settings
DEFAULT_SAMPLE_COUNT=1
DEFAULT_DURATION_SECONDS=8
DEFAULT_ASPECT_RATIO=16:9
DEFAULT_PERSON_GENERATION=allow_adult

# API Settings
DEFAULT_POLL_INTERVAL=10
DEFAULT_MAX_POLL_ATTEMPTS=30
DEFAULT_URL_EXPIRATION=3600

# UI Settings
SHOW_FULL_RESPONSE=false
ENABLE_STREAMING=true
AUTO_OPEN_BROWSER=false 